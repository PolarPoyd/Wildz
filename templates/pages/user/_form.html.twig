{% block body %}

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                {{ form_widget(form._token) }}
                <div class="form-group">
                    {{ form_label(form.roles) }}
                    {% for role in form.roles %}
                        <div class="form-check form-switch">
                            {{ form_widget(role, { 'attr': {'class': 'form-check-input'} }) }}
                            {{ form_label(role) }}
                        </div>
                    {% endfor %}
                    {{ form_errors(form.roles) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
					{{ form_errors(form.email) }}
                    <small id="emailHelp" class="form-text text-muted">{{ form_help(form.email) }}</small>
                </div>
                <div class="form-group">
                    {{ form_label(form.plainPassword) }}
                    {{ form_widget(form.plainPassword) }}
					{{ form_errors(form.plainPassword) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.firstname) }}
                    {{ form_widget(form.firstname) }}
					{{ form_errors(form.firstname) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.lastname) }}
                    {{ form_widget(form.lastname) }}
					{{ form_errors(form.lastname) }}
                </div>
                <div class="d-flex justify-content-center mt-5 mb-5">
                    <button type="submit" class="btn btn-primary me-4">Cr√©er</button>
                    <a class="btn btn-secondary" href="{{ path('app_user_index') }}">Retour</a>
                </div>
            </div>
        </div>

    </div>
{% endblock %}

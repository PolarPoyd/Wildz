{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container my-4">
        <h1 class="text-center mt-5 mb-5">Utilisateur {{ user.firstname }} {{ user.lastname }}</h1>

        <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <tbody>
                <tr>
                    <th class="text-center">Id</th>
                    <td class="text-center">{{ user.id }}</td>
                </tr>
                <tr>
                    <th class="text-center">E-mail</th>
                    <td class="text-center">{{ user.email }}</td>
                </tr>
                <tr>
                    <th class="text-center">Roles</th>
                    <td class="text-center">{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th class="text-center">Mot de passe</th>
                    <td class="text-center">{{ user.password }}</td>
                </tr>
                <tr>
                    <th class="text-center">Prénom</th>
                    <td class="text-center">{{ user.firstname }}</td>
                </tr>
                <tr>
                    <th class="text-center">Nom</th>
                    <td class="text-center">{{ user.lastname }}</td>
                </tr>
                <tr>
                    <th class="text-center">Crée le</th>
                    <td class="text-center">{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th class="text-center">Modifié le</th>
                    <td class="text-center">{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th class="text-center">Est verifié ?</th>
                    <td class="text-center">{{ user.isVerified ? 'Yes' : 'No' }}</td>
                </tr>
            </tbody>
        </table>
        </div>

        <div class="d-flex justify-content-center align-items-center gap-2 mt-5">
            <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Retour</a>

            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary">Modifier</a>

            {{ include('pages/user/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

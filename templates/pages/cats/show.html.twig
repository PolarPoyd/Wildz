{% extends 'base.html.twig' %}

{% block title %}Détail de chat
{% endblock %}

{% block body %}
	<div class="container my-4">
		<h1 class="text-center mt-5 mb-5">Chat
			{{ cat.name }}</h1>
		<div class="table-responsive">
			<table class="table table-bordered table-striped">
				<tbody>
					<tr>
						<th class="text-center">Id</th>
						<td class="text-center">{{ cat.id }}</td>
					</tr>
					<tr>
						<th class="text-center">Nom</th>
						<td class="text-center">{{ cat.name }}</td>
					</tr>
					<tr>
						<th class="text-center">Âge</th>
						<td class="text-center">{{ cat.age }}</td>
					</tr>
					<tr>
						<th class="text-center">Description</th>
						<td class="text-center">{{ cat.description }}</td>
					</tr>
					<tr>
						<th class="text-center">Image</th>
						<td class="text-center">
							{% if cat.imageName %}
								<a href="{{ asset('images/post/' ~ cat.imageName) }}" target="_blank">
									<img src="{{ asset('images/post/' ~ cat.imageName) }}" alt="{{ cat.name }}" width="100">
								</a>
							{% else %}
								Il n'y a pas d'image
							{% endif %}
						</td>
					</tr>
					<tr>
						<th class="text-center">Créé le</th>
						<td class="text-center">{{ cat.createdAt ? cat.createdAt|date('d/m/Y H:i:s') : '' }}</td>
					</tr>
					<tr>
						<th class="text-center">Modifié le</th>
						<td class="text-center">{{ cat.updatedAt ? cat.updatedAt|date('d/m/Y H:i:s') : '' }}</td>
					</tr>
				</tbody>
			</table>
		</div>

		<div class="d-flex justify-content-center align-items-center gap-2 mt-5">
			<a href="{{ path('app_cats_index') }}" class="btn btn-secondary">Retour</a>

			<a href="{{ path('app_cats_edit', {'id': cat.id}) }}" class="btn btn-primary">Modifier</a>

			{{ include('pages/cats/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}

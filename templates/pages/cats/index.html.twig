{% extends 'base.html.twig' %}

{% block title %}Cats index{% endblock %}

{% block body %}
    <h1>Cats index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
                <th>Description</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cat in cats %}
            <tr>
                <td>{{ cat.id }}</td>
                <td>{{ cat.name }}</td>
                <td>{{ cat.age }}</td>
                <td>{{ cat.description }}</td>
                <td>{{ cat.createdAt ? cat.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ cat.updatedAt ? cat.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_cats_show', {'id': cat.id}) }}">show</a>
                    <a href="{{ path('app_cats_edit', {'id': cat.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_cats_new') }}">Create new</a>
{% endblock %}

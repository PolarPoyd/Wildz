{% extends 'base.html.twig' %}

{% block title %}Dogs{% endblock %}

{% block body %}
    <h1>Dogs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ dog.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ dog.name }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ dog.age }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ dog.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ dog.createdAt ? dog.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ dog.updatedAt ? dog.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_dogs_index') }}">back to list</a>

    <a href="{{ path('app_dogs_edit', {'id': dog.id}) }}">edit</a>

    {{ include('pages/dogs/_delete_form.html.twig') }}
{% endblock %}

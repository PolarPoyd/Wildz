{% block stylesheets %}
    <style>
* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

body {
    font-family: 'Montserrat', sans-serif;
}

footer {
    background-color: white;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 300px;
    padding: 20px;
}

.footer-left {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    align-items: flex-start;
}

.logo {
    width: 50px;
}

.social-icons {
    display: flex;
    justify-content: space-between;
    width: 150px;
    margin-top: 10px;
}

.social-icon {
    color: black;
    text-decoration: none;
}

.footer-right {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: flex-start;
    margin-left: auto;
    margin-right: 10px;
    align-items: flex-start;
}

.footer-link {
    color: #FA8072;
    text-decoration: underline;
    font-size: 16px;
    font-weight: 100;
    margin-bottom: 10px;
    flex-basis: 48%;
}

.footer-bottom {
    margin-top: auto;
}

.adriano {
    color: #FA8072;
}

/* Media queries */
@media only screen and (max-width: 576px) {
  footer {
    height: auto;
    text-align: center;
  }
  .footer-left, .footer-right {
    align-items: center;
  }
  .social-icons {
    margin-bottom: 20px;
  }
  .footer-link {
    flex-basis: 100%;
    margin-bottom: 20px;
  }
  .footer-right {
    margin-left: 0;
    margin-right: 0;
  }
}

@media only screen and (min-width: 576px) and (max-width: 768px) {
  .social-icons {
    width: 100%;
    justify-content: center;
  }
  .footer-link {
    flex-basis: 50%;
    margin-bottom: 10px;
  }
}

@media only screen and (min-width: 768px) and (max-width: 992px) {
  .social-icons {
    width: 50%;
    justify-content: flex-start;
  }
  .footer-link {
    flex-basis: 33.33%;
    margin-bottom: 10px;
  }
}


